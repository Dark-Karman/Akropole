<Window x:Class="Akropole.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Akropole"
        mc:Ignorable="d"
        Title="MenuWindow" Height="200" Width="300">
    <Grid>
        <Image Source="/Resource/agentstvo-nedvizhimosti-heops.jpg" />

        <StackPanel VerticalAlignment="Center">
            <Button Content="Добавить" Name="addFlat" Click="addFlat_Click" Margin="10"/>
            <Button x:Name="overwatchBtn" Margin="10" Click="overwatchBtn_Click" Content="Просмотр"/>
            <Button Content="Выйти" Name="exitBtn" Click="exitBtn_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
